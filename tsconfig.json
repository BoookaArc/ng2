{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types",
      "src/types"
    ],
    "baseUrl": "./src",
    "paths": {
      "ng2-qgrid/core/*": [
        "core/*"
      ],
      "ng2-qgrid/plugin/*": [
        "plugin/*"
      ],
      "ng2-qgrid/*": [
        "lib/*"
      ]
    },
    "lib": [
      "es2017",
      "dom"
    ]
  }
}