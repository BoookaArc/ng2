{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "target": "es2015",
    "declaration": true,
    "inlineSources": true,
    "types": [],
    "lib": [
      "dom",
      "es2018"
    ],
    "paths": {
      "@qgrid/core/*": [
        "./projects/@qgrid/core/*"
      ],
      "@qgrid/core-plugins/*": [
        "./projects/@qgrid/core-plugins/*"
      ],
      "ngx-qgrid": [
        "./dist/ngx-qgrid"
      ]
    }
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ]
}