{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "target": "es2015",
    "declaration": true,
    "inlineSources": true,
    "types": [],
    "lib": [
      "dom",
      "es2018"
    ],
    "paths": {
      "qgrid/core/*": [
        "projects/qgrid-core/src/*"
      ],
      "qgrid/plugins/*": [
        "projects/qgrid-plugins/src/*"
      ],
      "ngx-qgrid": [
        "projects/ngx-qgrid/public-api.ts"
      ],
      "ngx-qgrid/plugins": [
        "projects/ngx-qgrid-plugins/public-api.ts"
      ]
    }
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true,
    "enableResourceInlining": true
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ]
}