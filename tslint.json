{
	"extends": [
		"tslint:recommended"
	],
	"rulesDirectory": [
		"node_modules/codelyzer"
	],
	"rules": {
		"no-debugger": false,
		"indent": [
			true,
			"tabs",
			3
		],
		"arrow-parens": false,
		// Custom
		"trailing-comma": [
			false,
			{
				"multiline": "always",
				"singleline": "never"
			}
		],
		"interface-name": [
			false,
			"always-prefix"
		],
		// Angular 2
		"component-class-suffix": true,
		// "component-selector": [true, "element", "my", "kebab-case"],
		"directive-class-suffix": true,
		// "directive-selector": [true, "attribute", "my", "camelCase"],
		"import-destructuring-spacing": false,
		"invoke-injectable": true,
		"no-access-missing-member": false,
		"no-attribute-parameter-decorator": true,
		"no-forward-ref": true,
		"no-input-rename": false,
		"no-output-rename": false,
		"pipe-naming": [
			true,
			"camelCase",
			"my"
		],
		"templates-use-public": false,
		"use-host-property-decorator": true,
		"use-input-property-decorator": true,
		"use-life-cycle-interface": false,
		"use-output-property-decorator": true,
		"use-pipe-transform-interface": true,
		// General
		"no-console": [
			true,
			"time",
			"timeEnd",
			"trace"
		],
		"no-empty": false,
		"max-line-length": [
			true,
			120
		],
		"max-classes-per-file": [
			false,
			0
		],
		"member-access": false,
		"member-ordering": {
			"order": [
				"fields-first"
			]
		},
		"no-string-literal": false,
		"no-use-before-declare": true,
		"no-var-requires": false,
		"no-trailing-whitespace": false,
		"object-literal-sort-keys": false,
		"ordered-imports": false,
		"quotemark": [
			true,
			"single",
			"avoid-escape"
		],
		"variable-name": [
			true,
			"allow-leading-underscore",
			"allow-pascal-case",
			"ban-keywords",
			"check-format"
		],
		"no-namespace": [
			true,
			"allow-declarations"
		],
		"align": [false, "parameters"]
	}
}
